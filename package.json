{
  "name": "pi-camera-control",
  "version": "2.0.0",
  "description": "Portable off-grid camera control system for Canon CCAPI",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm test && npm run test:e2e",
    "build": "echo 'No build step required for pure Node.js'",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PapaMarky/pi-camera-control"
  },
  "keywords": [
    "canon",
    "camera",
    "ccapi",
    "intervalometer",
    "raspberry-pi",
    "off-grid",
    "photography"
  ],
  "author": "Mark Pauley",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exifr": "^7.1.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "ws": "^8.14.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "eslint": "^8.48.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
